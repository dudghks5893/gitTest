package chapter8;

public class GoldCustomer extends Customer{
	//필드  (힙 메모리)
		double saleRatio;		 	//할인율
		
		//생성자 (디폴트 생성자)
		public GoldCustomer() {
			super(); //상위 클래스의 생성자를 먼저 실행한다.
			customerGrade = "Gold";
			bonusRatio = 0.05;
			saleRatio = 0.1;
		}

		@Override
		public int calcPrice(int price) {
			bonusPoint += price * bonusRatio;
			return price - (int)(price*saleRatio); //할인된 가격을 계산하여 반환
		}
	}
