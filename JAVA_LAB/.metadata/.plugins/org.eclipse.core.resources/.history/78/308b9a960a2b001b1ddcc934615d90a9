package cooperation;

public class Taxi {
	//필드
	int taxiNumber;
	int passengerCount;
	int money;
	int fare;
	
	//생성자
	public Taxi(int taxiNumber) {
		this.taxiNumber = taxiNumber;
	}
	//메소드 : 승객이 버스를 탔음 수입증가, 승객수 증가
	public void take(int fare) {
		this.money += fare;
		passengerCount++;
	}
	//메소드 정보를 나타냄
	public void showInfo() {
		System.out.printf("택시%s의 승객은 %d명이고, 수입은 %d원 입니다. \n",taxiNumber,passengerCount,money);
	}
}

