package chapter7;

public class BookArray {

	public static void main(String[] args) {
		//객체 타입 배열
		Book[] libray = new Book[5]; //5칸의 book 객체 배열을 만듬
		
		Book b1 = new Book("파이썬","모름");
		Book b2 = new Book("자바","김유신");
		Book b3 = new Book("CSS","영환");
		Book b4 = new Book("SQL","오라클");
		Book b5 = new Book("HTML","펭수");
		
		libray[0] = b1;
		libray[1] = b2;
		libray[2] = b3;
		libray[3] = b4;
		libray[4] = b5;
		
		System.out.println(libray[1].getBookName());
		System.out.println(b2.getBookName());
		
		for(int i=0; i< libray.length; i++) {
			libray[i].showBookInfo();
		}
	}

}

class Book{
	private String bookName;
	private String author;
	
	//생성자 2개
	public Book() {} // 디폴트 생성자
	public Book(String bookName, String author) {
		this.bookName = bookName;
		this.author = author;
	}
	//겟 셋 자동생성
	public String getBookName() {
		return bookName;
	}
	public void setBookName(String bookName) {
		this.bookName = bookName;
	}
	public String getAuthor() {
		return author;
	}
	public void setAuthor(String author) {
		this.author = author;
	} 
	public void showBookInfo() {
	    System.out.println(bookName +"," + author);
	}
}